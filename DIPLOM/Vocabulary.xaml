<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DIPLOM.Vocabulary"
             Title="Vocabulary">
    <VerticalStackLayout Spacing="5" VerticalOptions="Center" HorizontalOptions="Center">
        <Label 
            Text="Your Vocabulary"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid ColumnSpacing="5" VerticalOptions="Center" HorizontalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                
            <BoxView Color="#ac99ea" WidthRequest="100" 
                     HeightRequest="60" CornerRadius="10" 
                     HorizontalOptions="Center" VerticalOptions="Center"
                     Grid.Column="0" Grid.Row="0"/>
            <BoxView Color="#ac99ea" WidthRequest="100" 
                     HeightRequest="60" CornerRadius="10" 
                     HorizontalOptions="Center" VerticalOptions="Center"
                     Grid.Column="1" Grid.Row="0"/>
            <Label TextColor="#242424" HorizontalOptions="Center" VerticalOptions="Center" Text="English" Grid.Column="0" Grid.Row="0"/>
            <Label TextColor="#242424" HorizontalOptions="Center" VerticalOptions="Center" Text="Русский" Grid.Column="1" Grid.Row="0"/>
            <Label HorizontalOptions="Center" VerticalOptions="Center" Text="word" Grid.Column="0" Grid.Row="1"/>
            <Label HorizontalOptions="Center" VerticalOptions="Center" Text="слово" Grid.Column="1" Grid.Row="1"/>
        </Grid>
         <Button 
                x:Name="SubmitBtn"
                Text="Submit"
                SemanticProperties.Hint="Submitting word"
                Clicked="SubmitWord"
                WidthRequest="200"
                HeightRequest="50"
         />
        
            
    </VerticalStackLayout>
</ContentPage>